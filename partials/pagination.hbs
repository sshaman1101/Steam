<nav class="pagination" role="pagination">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}"><i class="fa fa-chevron-circle-left"></i> Раньше</a>
    {{/if}}
    <span class="page-number">Страница {{page}} из {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">Позже <i class="fa fa-chevron-circle-right"></i></a>
    {{/if}}
</nav>
